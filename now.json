{
    "version": 2,
    "builds": [
        {
            "src": "*.js",
            "use": "@now/node-server"
        }
    ],
    "routes": [
        {
            "src": "/",
            "dest": "/"
          },
        {
          "src": "/weapons",
          "dest": "./app/public/weapons.html",
          "methods": ["GET"]
        },
        {
          "src": "/spells",
          "dest": "./app/public/spells.html"
        },
        {
            "src": "/bosses",
            "dest": "./app/public/bosses.html"
          }
      ]
}